{
  "name": "infinite-runner-saas",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm --filter web dev\" \"pnpm --filter api dev\"",
    "playtester": "pnpm --filter @srv/playtester dev",
    "build": "pnpm -r run build",
    "lint": "pnpm -r run lint",
    "format": "pnpm -r run format",
    "dev:up": "powershell -ExecutionPolicy Bypass -File scripts/dev-up.ps1",
    "dev:down": "powershell -ExecutionPolicy Bypass -File scripts/dev-down.ps1",
    "prod:up": "powershell -ExecutionPolicy Bypass -File scripts/prod-up.ps1",
    "prod:down": "powershell -ExecutionPolicy Bypass -File scripts/prod-down.ps1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "concurrently": "^8.2.2",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.1.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.8.0"
  },
  "pnpm": {
    "allowedBuiltDependencies": [
      "better-sqlite3",
      "esbuild",
      "msgpackr-extract"
    ],
    "ignoredBuiltDependencies": [
      "msgpackr-extract"
    ],
    "onlyBuiltDependencies": [
      "better-sqlite3"
    ]
  },
  "trustedDependencies": [
    "better-sqlite3",
    "esbuild",
    "msgpackr-extract"
  ]
}
