{
  "name": "api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "nodemon --watch src --ext ts --exec \"tsx src/app.ts\"",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/app.js",
    "migrate": "tsx src/db/migrate.ts",
    "lint": "eslint \"src/**/*.ts\"",
    "format": "prettier --check \"src/**/*.ts\"",
    "dev:direct": "tsx src/app.ts"
  },
  "dependencies": {
    "@fastify/cors": "^8.4.2",
    "@ir/game-spec": "workspace:^",
    "better-sqlite3": "^9.4.0",
    "bullmq": "^5.12.0",
    "dotenv": "^16.6.1",
    "fastify": "^4.25.2",
    "ioredis": "^5.3.2",
    "prom-client": "^15.1.1",
    "pino": "^9.4.0",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.11",
    "@types/node": "^20.10.6",
    "@types/uuid": "^9.0.7",
    "nodemon": "^3.0.3",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  }
}
